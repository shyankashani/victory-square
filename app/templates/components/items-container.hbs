<div class="container-fluid">
  <div class="row">
    <div class="col-2">
      {{items-sidebar
        colors=colors
        selectedColorId=selectedColorId
        toggleColorId=(action "toggleColorId")
      }}
    </div>
    <div class="col-10">
      <div class="container-fluid border rounded bg-light">
        {{#each filteredItems as |item|}}
          {{item-row item=item}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
