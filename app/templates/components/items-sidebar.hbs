<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      {{#filter-group title="Search"}}
        {{input value=searchQuery placeholder="Search..." class="w-75 border-0 bg-light px-3 py-1"}}
      {{/filter-group}}

      {{#filter-group title="Difficulty"}}
        {{#each colors as |color|}}
          {{filter-checkbox
            text=color.name
            color=color.color
            checkboxId=color.id
            selectedId=selectedColorId
            clickAction=(action toggleColorId)
          }}
        {{/each}}
      {{/filter-group}}

      {{#filter-group title="Categories"}}
        {{#each categories as |category|}}
          {{filter-checkbox
            text=category.name
            color="secondary"
            checkboxId=category.id
            selectedId=selectedCategoryId
            clickAction=(action toggleCategoryId)
          }}
        {{/each}}
      {{/filter-group}}
    </div>
  </div>
</div>
