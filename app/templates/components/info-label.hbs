<div>
  <div class="d-inline border-top border-secondary pt-1 font-size-small">
    {{#if icon}}
      <div class="d-inline {{if header "pr-1"}}">
        {{fa-icon icon}}
      </div>
    {{/if}}
    <div class="d-inline">
      {{header}}
    </div>
  </div>
</div>
<div class="mt-2 {{if (eq size "large") "h3"}}">
  <div class="d-inline">
    {{#if isEditable}}
      {{input
        value=value
        class="p-0 w-50 font-size-small"
      }}
    {{else}}
      {{value}}
    {{/if}}
  </div>
  {{#if isEditable}}
    <div
      class="d-inline font-size-small align-top"
      {{action "check"}}
    >
      {{fa-icon "check"}}
    </div>
  {{else if showEditIcon}}
    <div
      class="d-inline font-size-small align-top"
      {{action "makeEditable"}}
    >
      {{fa-icon "pencil"}}
    </div>
  {{/if}}
</div>
