<div class="container mt-5 pt-5">
  <div class="row">
    <div class="col-2">
      {{items-sidebar
        class="position-fixed"
        selectedDifficulty=difficulty
        selectedCategory=category
        search=search
        difficulties=model.difficulties
        categories=model.categories
      }}
    </div>
    <div class="col-8">
      <div class="container">
        {{#each filteredItems as |item|}}
          {{item-row item=item}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{item-modal
  item=selectedItem
  isOpen=gameId
  onHide=(action "clearSelectedItem")
  difficulties=model.difficulties
  categories=model.categories
}}
